<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/threadLinesContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/reddit_content_horizontal_padding"
        android:layout_marginLeft="@dimen/reddit_content_horizontal_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></LinearLayout>

    <View
        android:id="@+id/topHotspot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/expandSectionButton"
        app:layout_constraintBottom_toBottomOf="@+id/expandSectionButton"
        app:layout_constraintStart_toEndOf="@+id/headerView"
        app:layout_constraintEnd_toEndOf="parent" />

    <HorizontalScrollView
        android:id="@+id/headerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadingEdge="horizontal"
        android:requiresFadingEdge="horizontal"
        android:scrollbars="none"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="@+id/expandSectionButton"
        app:layout_constraintBottom_toBottomOf="@+id/expandSectionButton"
        app:layout_constraintStart_toEndOf="@+id/threadLinesContainer"
        app:layout_constraintEnd_toStartOf="@+id/expandSectionButton">

        <com.idunnololz.summit.view.RedditHeaderView
            android:id="@+id/headerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/expandSectionButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:src="@drawable/baseline_expand_more_black_18"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingStart="@dimen/reddit_content_horizontal_padding"
        android:paddingEnd="@dimen/reddit_content_horizontal_padding"
        app:layout_constraintStart_toEndOf="@+id/headerView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/padding_half"
        android:layout_marginRight="@dimen/padding_half"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/threadLinesContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>