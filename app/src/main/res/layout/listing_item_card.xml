<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_marginHorizontal="@dimen/padding_quarter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground">

        <View
            android:id="@+id/highlight_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorHighlight"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.idunnololz.summit.view.ReactiveImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintHeight_min="200dp"
            app:layout_constraintHeight_max="1000dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <HorizontalScrollView
            android:id="@+id/headerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_half"
            android:paddingStart="@dimen/reddit_content_horizontal_padding"
            android:paddingEnd="@dimen/reddit_content_horizontal_padding"
            android:fadingEdge="horizontal"
            android:requiresFadingEdge="horizontal"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.idunnololz.summit.view.LemmyHeaderView
                android:id="@+id/headerContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </HorizontalScrollView>

        <com.idunnololz.summit.view.LinkifyTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceTitleMedium"
            android:layout_marginStart="@dimen/padding"
            android:layout_marginEnd="@dimen/reddit_content_horizontal_padding"
            android:layout_marginTop="@dimen/padding_quarter"
            app:layout_constraintTop_toBottomOf="@+id/headerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/commentButton"
            style="@style/MyApp.Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/reddit_content_horizontal_padding"
            app:icon="@drawable/baseline_comment_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"/>

        <ImageButton
            android:id="@+id/open_link_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_open_in_new_black_24"
            android:padding="@dimen/padding_half"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="@+id/commentButton"
            app:layout_constraintBottom_toBottomOf="@+id/commentButton"
            app:layout_constraintEnd_toStartOf="@+id/upvoteButton" />

        <ImageButton
            android:id="@+id/upvoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_upward_24"
            android:padding="@dimen/padding_half"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="@+id/commentButton"
            app:layout_constraintBottom_toBottomOf="@+id/commentButton"
            app:layout_constraintEnd_toStartOf="@+id/upvoteCount" />

        <TextView
            android:id="@+id/upvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/commentButton"
            app:layout_constraintBottom_toBottomOf="@+id/commentButton"
            app:layout_constraintEnd_toStartOf="@+id/downvoteButton" />

        <ImageButton
            android:id="@+id/downvoteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_downward_24"
            android:paddingStart="@dimen/padding_half"
            android:paddingLeft="@dimen/padding_half"
            android:paddingEnd="@dimen/reddit_content_horizontal_padding_for_downvote"
            android:paddingRight="@dimen/reddit_content_horizontal_padding_for_downvote"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="@+id/commentButton"
            app:layout_constraintBottom_toBottomOf="@+id/commentButton"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>