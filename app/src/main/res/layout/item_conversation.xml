<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:padding="@dimen/padding_half"
        android:foreground="@drawable/account_ripple"
        android:scaleType="centerCrop"
        android:layout_marginStart="12dp"
        style="@style/CircleImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="?colorOnSurface"
        app:strokeWidth="1dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceTitleMedium"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/padding"
        android:layout_marginStart="@dimen/padding_half"
        android:layout_marginEnd="@dimen/padding_half"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/content"
        app:layout_constraintEnd_toStartOf="@+id/ts"/>

    <com.idunnololz.summit.view.LinkifyTextView
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceBodyMedium"
        android:maxLines="2"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:singleLine="false"
        android:layout_marginTop="@dimen/padding_quarter"
        android:layout_marginBottom="@dimen/padding"
        android:layout_marginStart="@dimen/padding_half"
        android:layout_marginEnd="@dimen/padding"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/ts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?textAppearanceLabelMedium"
        android:layout_marginEnd="@dimen/padding"
        android:alpha="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title"/>

</androidx.constraintlayout.widget.ConstraintLayout>