<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:text="@string/settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dialog_padding"
        android:paddingHorizontal="@dimen/dialog_padding"
        android:paddingVertical="@dimen/dialog_padding"
        android:gravity="center_vertical"
        android:textAppearance="?textAppearanceTitleSmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:drawableTint="?colorControlNormal"
        app:drawableStartCompat="@drawable/baseline_person_add_alt_24" />

</androidx.constraintlayout.widget.ConstraintLayout>