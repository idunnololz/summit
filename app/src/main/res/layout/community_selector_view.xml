<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.idunnololz.summit.util.FixedBottomSheetBehavior"
    android:backgroundTint="?colorSurfaceContainerLow"
    style="@style/Widget.Material3.BottomSheet.Modal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.idunnololz.summit.view.PrefixedEditText
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:paddingHorizontal="@dimen/padding"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginHorizontal="@dimen/padding"
            android:maxLines="1"
            android:inputType="text"
            android:textAppearance="?textAppearanceBodyMedium"
            android:background="@drawable/subreddit_filter_bg"
            android:gravity="center_vertical"
            android:hint="community"
            app:prefix="c/"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/footer_spacer_height"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintTop_toBottomOf="@+id/search_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>