<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/normal"
        app:constraintSetEnd="@+id/exiting"
        app:duration="250">

        <OnSwipe
            app:touchAnchorId="@+id/imageView"
            app:touchAnchorSide="bottom"
            app:dragDirection="dragUp" />
    </Transition>

    <ConstraintSet android:id="@+id/normal">
        <Constraint
            android:id="@+id/dismiss_warning"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOverlay"
            android:text="@string/let_go_to_go_back"
            android:textAppearance="?textAppearanceHeadline3"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingTop="@dimen/padding"
            app:layout_constraintBottom_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/exiting">
        <Constraint
            android:id="@+id/dismiss_warning"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorOverlay"
            android:text="@string/let_go_to_go_back"
            android:textAppearance="?textAppearanceHeadline3"
            android:layout_marginTop="?attr/actionBarSize"
            android:paddingTop="@dimen/padding"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

</MotionScene>
