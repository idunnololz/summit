<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/community"
    app:startDestination="@id/communityFragment">

    <include app:graph="@navigation/login" />

    <action android:id="@+id/action_global_login" app:destination="@id/login"/>

    <fragment
        android:id="@+id/communityFragment"
        android:name="com.idunnololz.summit.lemmy.community.CommunityFragment"
        android:label="SubredditFragment">
        <argument
            android:name="communityRef"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="com.idunnololz.summit.lemmy.CommunityRef" />
        <argument
            android:name="pageIndex"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_mainFragment_to_postFragment"
            app:destination="@id/postFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_mainFragment_to_imageViewerFragment"
            app:destination="@id/imageViewerFragment" />
        <action
            android:id="@+id/action_subredditFragment_self"
            app:destination="@id/communityFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_subredditFragment_switchSubreddit"
            app:destination="@id/communityFragment" />
        <action
            android:id="@+id/action_subredditFragment_to_commentFeatureDialogFragment"
            app:destination="@id/commentFeatureDialogFragment" />
        <action
            android:id="@+id/action_communityFragment_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/postFragment"
        android:name="com.idunnololz.summit.lemmy.post.PostFragment"
        android:label="PostFragment">
        <argument
            android:name="instance"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="currentCommunity"
            app:argType="com.idunnololz.summit.lemmy.CommunityRef"
            app:nullable="true" />
        <argument
            android:name="post"
            app:argType="com.idunnololz.summit.api.dto.PostView"
            app:nullable="true"
            android:defaultValue="@null"/>
        <argument
            android:name="jumpToComments"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="reveal"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="videoState"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="com.idunnololz.summit.video.VideoState"/>
        <action
            android:id="@+id/action_postFragment_to_imageViewerFragment"
            app:destination="@id/imageViewerFragment" />
        <action
            android:id="@+id/action_postFragment_to_subredditFragment"
            app:destination="@id/communityFragment" />
        <action
            android:id="@+id/action_postFragment_to_commentRawDialogFragment"
            app:destination="@id/commentRawDialogFragment" />
        <action
            android:id="@+id/action_postFragment_to_commentFeatureDialogFragment"
            app:destination="@id/commentFeatureDialogFragment" />
        <action
            android:id="@+id/action_postFragment_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/imageViewerFragment"
        android:name="com.idunnololz.summit.preview.ImageViewerFragment"
        android:label="ImageViewerFragment">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="mimeType"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <dialog
        android:id="@+id/goToDialogFragment"
        android:name="com.idunnololz.summit.go_to.GoToDialogFragment"
        android:label="GoToDialogFragment" />
    <fragment
        android:id="@+id/videoViewerFragment"
        android:name="com.idunnololz.summit.preview.VideoViewerFragment"
        android:label="VideoViewerFragment">
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="videoType"
            app:argType=".preview.VideoType" />
        <argument
            android:name="videoState"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="com.idunnololz.summit.video.VideoState"/>
    </fragment>
    <dialog
        android:id="@+id/commentRawDialogFragment"
        android:name="com.idunnololz.summit.comment.CommentRawDialogFragment"
        android:label="CommentRawDialogFragment">
        <argument
            android:name="commentItemStr"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/commentFeatureDialogFragment"
        android:name="com.idunnololz.summit.comment.CommentFeatureDialogFragment"
        android:label="CommentFeatureDialogFragment" />
</navigation>