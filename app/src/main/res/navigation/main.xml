<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/mainFragment">

    <include app:graph="@navigation/community" />

    <action android:id="@+id/action_global_login" app:destination="@id/login"/>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.idunnololz.summit.main.MainFragment"
        android:label="MainFragment">
        <argument
            android:name="url"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="string" />

        <action
            android:id="@+id/action_mainFragment_to_community"
            app:destination="@+id/community">
            <argument
                android:name="communityRef"
                android:defaultValue="@null"
                app:nullable="true"
                app:argType="com.idunnololz.summit.lemmy.CommunityRef" />
            <argument
                android:name="pageIndex"
                android:defaultValue="0"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/savedFragment"
        android:name="com.idunnololz.summit.saved.SavedFragment"
        android:label="SavedFragment" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.idunnololz.summit.history.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/imageViewerFragment"
        android:name="com.idunnololz.summit.preview.ImageViewerFragment"
        android:label="ImageViewerFragment">
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="mimeType"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <action android:id="@+id/action_global_imageViewerFragment" app:destination="@id/imageViewerFragment"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.idunnololz.summit.settings.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_settingsFragment_to_settingViewTypeFragment"
            app:destination="@id/settingViewTypeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_settingsFragment_to_settingThemeFragment"
            app:destination="@id/settingThemeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <action android:id="@+id/action_global_settingsFragment"
        app:destination="@id/settingsFragment"
        app:enterAnim="@anim/slide_in"
        app:exitAnim="@anim/fade_out"
        app:popEnterAnim="@anim/fade_in"
        app:popExitAnim="@anim/slide_out"  />
    <fragment
        android:id="@+id/videoViewerFragment"
        android:name="com.idunnololz.summit.preview.VideoViewerFragment"
        android:label="VideoViewerFragment">
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="videoType"
            app:argType=".preview.VideoType" />
        <argument
            android:name="videoState"
            android:defaultValue="@null"
            app:nullable="true"
            app:argType="com.idunnololz.summit.video.VideoState"/>
    </fragment><action android:id="@+id/action_global_videoViewerFragment" app:destination="@id/videoViewerFragment"/>
    <fragment
        android:id="@+id/settingViewTypeFragment"
        android:name="com.idunnololz.summit.settings.view_type.SettingViewTypeFragment"
        android:label="SettingViewTypeFragment" />
    <fragment
        android:id="@+id/settingThemeFragment"
        android:name="com.idunnololz.summit.settings.theme.SettingThemeFragment"
        android:label="SettingThemeFragment" />
</navigation>