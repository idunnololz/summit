<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/googleBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.App</item>

        <item name="backgroundColor">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/googleBackground</item>
        <item name="android:navigationBarColor">@color/googleBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.Material3.DayNight">
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Ensure the notification bar is the right color -->

        <!-- No need to do this since we are setting it programatically -->
        <!-- <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/isLightTheme</item> -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:cacheColorHint">@color/black</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondaryContainer</item>
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="colorToolbar">@color/toolbarColor</item>

        <item name="appBarLayoutStyle">@style/MyApp.Widget.MaterialComponents.AppBarLayout.Primary
        </item>

        <!--Material type attributes-->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.App.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.App.BodySmall</item>

        <item name="imageButtonStyle">@style/MyApp.Widget.AppCompat.ImageButton</item>

        <item name="popupMenuStyle">@style/MyApp.Widget.MaterialComponents.PopupMenu</item>

<!--        <item name="android:dialogTheme">@style/Theme.App.Dialog</item>-->
<!--        <item name="android:alertDialogTheme">@style/Theme.App.Dialog</item>-->

        <item name="actionOverflowMenuStyle">@style/Widget.Material3.PopupMenu.Overflow</item>

        <item name="elevationOverlayColor">@color/white10</item>

        <item name="materialCardViewStyle">@style/MyApp.Widget.Material3.CardView</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/isLightTheme</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="OverlayThemeRegular">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="backgroundColor">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
    </style>

    <style name="Theme.App.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="elevationOverlayEnabled">false</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!--Material type attributes-->
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.App.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.App.BodySmall</item>

        <item name="imageButtonStyle">@style/MyApp.Widget.AppCompat.ImageButton</item>
    </style>

    <style name="Theme.App.Dialog.Alert" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <item name="imageButtonStyle">@style/MyApp.Widget.AppCompat.ImageButton</item>
    </style>

    <style name="Theme.App.Dialog.Fullscreen">
<!--        <item name="android:windowFullscreen">false</item>-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:colorBackground">@color/colorWindowBackground</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimationStyle</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <style name="Theme.App.Dialog.Alert.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="MyApp.Widget.MaterialComponents.PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@color/colorSurface</item>
    </style>

    <style name="MyApp.Widget.MaterialComponents.AppBarLayout.Primary" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">?backgroundColor</item>
    </style>

    <style name="MyApp.Widget.MaterialComponents.Button.TextButton.Icon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/colorTextTitle</item>
        <item name="iconTint">@color/colorTextTitle</item>
    </style>

    <style name="MyApp.Widget.AppCompat.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="tint">?attr/colorControlNormal</item>
        <item name="iconTint">?attr/colorControlNormal</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="DayPickerDayStyle">
        <item name="android:textAppearance">?textAppearanceBodyMedium</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>


    <style name="CircleImageView">
        <item name="shapeAppearanceOverlay">@style/CircleImageViewAppearanceOverlay</item>
        <item name="android:foreground">@drawable/circle_ripple</item>
    </style>

    <style name="CircleImageViewAppearanceOverlay">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyApp.Widget.Material3.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="SettingHeaderStyle">
        <item name="android:textAppearance">?textAppearanceTitleLarge</item>
    </style>

    <style name="RoundImageView">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:padding">1dp</item>
        <item name="shapeAppearanceOverlay">@style/RoundImageViewAppearanceOverlay</item>
        <item name="android:foreground">@drawable/round_image_ripple_bg</item>
    </style>

    <style name="RoundImageViewAppearanceOverlay">
        <item name="cornerSize">@dimen/padding_half</item>
    </style>

</resources>
